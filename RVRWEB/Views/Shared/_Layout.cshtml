<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="robots" content="@ViewBag.robots_index, @ViewBag.robots_follow">
    @{  ViewBag.robots_index = ViewBag.robots_index ?? "noindex"; // Para indexar = "index" / Para não indexar = "noindex"
        ViewBag.robots_follow = ViewBag.robots_follow ?? "nofollow"; // Para seguir os links = "follow" / Para não seguir os links = "nofollow"
     }
</head>
<body>
   

        <nav class="navbar navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("R.R.", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Renan Rolo", "Sobre", "Home")</li>
                        <li>@Html.ActionLink("Minha Galeria", "Index", "Galeria")</li>
                        <li>@Html.ActionLink("Jogos", "Arkanoid", "Jogos")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index", "Admin")"><span class="glyphicon glyphicon-cog"></span></a></li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-lg-12">
            <p>&copy; @DateTime.Now.Year - RVRweb</p>
        </footer>
    </div>


    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/GoogleAnalytics")
    @RenderSection("scripts", required: false)
</body>
</html>
