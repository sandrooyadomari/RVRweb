<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="nofollow, noindex" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Areas/Admin/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("RVRWEB Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <aside class="adminaside">
        <ul class="nav nav-pills nav-stacked">
            <li><a href="@Url.Action("Index", "Dashboard")"><span class="glyphicon glyphicon-th-large"></span> &nbsp; Dashboard</a></li>
            
            <li>
                <a href="@Url.Action("Index", "Tarefas")">
                    <span class="glyphicon glyphicon-list"></span> &nbsp; Tarefas 
                </a> <span class="caret-menu"><span class="caret"></span></span>
                <ul class="nav-sub-items">
                    <li>
                        <a href="@Url.Action("Create", "Tarefas")">Criar Nova Tarefa</a>
                    </li>
                </ul>
            </li>

            <li>
                <a href="@Url.Action("Index", "Financeiros")">
                    <span class="glyphicon glyphicon-briefcase"></span> &nbsp; Financeiros
                </a> <span class="caret-menu"><span class="caret"></span></span>
                <ul class="nav-sub-items">
                    <li>
                        <a href="@Url.Action("Create", "Financeiros")">Criar Nova Tarefa</a>
                    </li>
                </ul>
            </li>

        </ul>
    </aside>

    <div class="body-content bodyadmin">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
